<!--이하 내용 동일-->
<div class="container" style="margin-top:50px">
    <div class="row">
        <form action="/write" method="POST">
          <div class="col-xs-1"></div>
          <div class="col-xs-4">
                <label for="exampleInputEmail1">새로운 계획</label>
                <textarea name="content" class="form-control" rows="10" placeholder="1.피드백 수행계획  2.시기, 기한"></textarea>
          </div>
          <div class="col-xs-1"></div>
          <div class="col-xs-4">
                <label for="exampleInputEmail1">전 계획 실행결과 피드백</label>
                <textarea name="feedback" class="form-control" rows="10" placeholder="전 계획의 1.좋았던 점, 2.문제점 3.개선 가능한 점을 생각해 작성해주세요"></textarea>
          </div>
          <div class="col-xs-2">
              <button type="submit" class="btn btn-primary">작성완료</button>
          </div>
        </form>
    </div><!--row-->
    <hr>
    <!--이하 list row-->
    <h2>History</h2>
    <% @every_post.each do |p| %>
    <div class="row">
        <div class="col-xs-1">문서번호</div>
        <div class="col-xs-4"><%= p.id %></div>
        <div class="col-xs-1">작성시간</div>
        <div class="col-xs-6"><%= p.created_at %></div>
    </div>
    <div class="row">
        <div class="col-xs-1">작성내용</div>
        <div class="col-xs-4" style="white-space:pre-wrap; padding:10px 5px 20px 5px; outline:1px solid #bbb"><%= p.content %></div>
        <div class="col-xs-1">피드백</div>
        <div class="col-xs-4" style="white-space:pre-wrap; padding:10px 5px 20px 5px; outline:1px solid #bbb"><%= p.feedback %></div>
        <div class="col-xs-2">
        <a href="/update_view/<%= p.id %>">[수정]</a><br>
        <a href="/destroy/<%= p.id %>">[삭제]</a>
        </div>
    </div>
    <hr>
    <% end %>
</div>
<div class="container" style="margin-top:50px">
<!--Dashborad 출력부분-->
    <div class="row">
        <div class="dashboard">
            dashboard 출력부분입니다.
        </div>
    </div>
<!--역할목적 출력부분-->user.id:<%= @user.id %>님의 역할들
    <% @identities.each do |r| %>
    <hr>
    <% if @one_identity.id != r.id %>
    <div class="row">
        <div class="col-xs-2">identitiy.NO: <%= r.id %></div>
        <div class="col-xs-2">역할: <%= r.role %></div><div class="col-xs-8">목적:<%= r.objective %><a
        href="/updateRole_view/<%= @user.realID %>/<%= r.id %>">[수정]</a>
        <a href="/deleteRole/<%= @user.realID %>/<%= r.id %>">[삭제]</a></div>
    </div>
    <% else %>
    <div class="row">
        <form action="/updateRole_do/<%= @user.realID %>/<%= r.id %>" method="POST">
          <div class="col-xs-1"></div>
          <div class="col-xs-3">
                <label for="exampleInputEmail1" style="background-color: orange;">역할수정</label>
                <input type="text" value="<%= @one_identity.role %>" name="role" class="form-control" id="exampleInputPassword1" placeholder="당신의 역할">
          </div>
          <div class="col-xs-6">
                <label for="exampleInputEmail1" style="background-color: orange;">목적수정</label>
                <input type="text" value="<%= @one_identity.objective %>" name="objective" class="form-control" id="exampleInputPassword1" placeholder="그 역할을 수행하는 목적은 무엇인가요?">
          </div>
          <div class="col-xs-2">
              <button type="submit" class="btn btn-primary" style="margin-top: 25px;">역할 수정</button>
          </div>
        </form>
    </div><!--row-->
    <% end %>
    <hr>
    <!--주제list 출력부-->
    <div class="row">
        <% @subjects = Subject.where("identity_id = ?" , r.id).order("id desc") %>
        <% @subjects.each do |s| %>
            <div class="col-xs-6 col-sm-4 col-md-3" style="white-space:pre-wrap; outline:1px solid #bbb">
            <a href="/planandfeedback/<%= @user.realID %>/<%= s.id %>">
            subject.NO : <%= s.id %><br>
            주제:<%= s.title %><hr>
            목표:<%= s.goal %><br></a>
            <a href="/updateSubject_view/<%= @user.realID %>/<%= s.id %>">[수정]</a><a href="/deleteSubject/<%= @user.realID %>/<%= s.id %>">[삭제]</a>
            </div>
        <% end %>
    <!--새 주제 입력부-->
        <form action="/addSubject/<%= @user.realID %>" method="GET">
          <div class="col-xs-6 col-sm-4 col-md-3" style="white-space:pre-wrap; outline:1px solid #bbb">
              새 주제<input type="text" name="title" class="form-control" id="exampleInputPassword1" placeholder="무엇을 생각해야 하나요?">
              새 목표<input type="text" name="goal" class="form-control" id="exampleInputPassword1" placeholder="그것을 얼마나 해야하죠?">
            <input type="hidden" name="identity_id" value="<%= r.id %>" style="width:1px;height:1px;">
            <input type="hidden" name="user_nid" value="<%= @user.id %>">
            <button type="submit" class="btn btn-primary">새 주제 만들기</button>
          </div>
        </form>
    </div><!--row-->
    
    <% end %>
<hr><hr>
<!--새 역할 목적 입력부-->
    <div class="row" style="padding:50px"></div>
</div><!--container-->